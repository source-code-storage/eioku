# syntax=docker/dockerfile:1.4
# Stage 1: Copy ffmpeg from pre-built image
FROM jrottenberg/ffmpeg:8-ubuntu as ffmpeg-builder

# Stage 2: Build with Python 3.10 on Ubuntu (compatible with ffmpeg)
FROM ubuntu:22.04

# Install Python 3.10, pip, and curl
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 \
    python3-pip \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy ffmpeg binaries from the builder stage
COPY --from=ffmpeg-builder /usr/local/bin/ffmpeg /usr/local/bin/ffmpeg
COPY --from=ffmpeg-builder /usr/local/bin/ffprobe /usr/local/bin/ffprobe

# Install Poetry
RUN python3 -m pip install --no-cache-dir poetry

WORKDIR /app

# Copy pyproject.toml and poetry.lock (context is ../backend from docker-compose)
COPY pyproject.toml poetry.lock README.md ./

# Configure Poetry to create virtualenv in a fixed location
ENV POETRY_NO_INTERACTION=1 \
    POETRY_VIRTUALENVS_IN_PROJECT=0 \
    POETRY_VIRTUALENVS_PATH=/opt/venv \
    POETRY_CACHE_DIR=/root/.cache/pypoetry

# Install dependencies with Poetry and BuildKit cache
RUN --mount=type=cache,target=/root/.cache/pypoetry \
    poetry install --no-root

# Add venv to PATH
ENV PATH="/opt/venv/bin:$PATH"

# The virtualenv is now baked into the image
# Source code will be mounted as a volume at runtime
