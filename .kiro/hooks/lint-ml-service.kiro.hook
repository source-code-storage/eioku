{
  "enabled": true,
  "name": "Lint ML Service Code",
  "description": "Runs Ruff format and check on ml-service source and test files using Docker Compose",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "runCommand",
    "command": "docker compose -f dev/docker-compose.yml exec ml-service sh -c 'poetry install --no-root && poetry run ruff format --check src tests && poetry run ruff check src tests'"
  }
}
